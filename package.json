{
  "version": "0.2.2",
  "repository": "https://github.com/kaermorchen/twig-parser",
  "scripts": {
    "release": "release-it"
  },
  "author": "Stanislav Romanov <kaermorchen@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "release-it": {
    "hooks": {
      "after:bump": "npm run build -ws"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "additionalManifests": {
          "versionUpdates": [
            "package.json",
            "packages/twig-parser/package.json",
            "packages/twig-language-server/package.json",
            "packages/vscode-twig/package.json",
            "website/package.json"
          ],
          "dependencyUpdates": [
            "packages/twig-parser/package.json",
            "packages/twig-language-server/package.json",
            "packages/vscode-twig/package.json",
            "website/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "workspaces": [
    "packages/twig-parser",
    "packages/twig-language-server",
    "packages/vscode-twig",
    "website"
  ],
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.10.3"
  },
  "private": true
}
