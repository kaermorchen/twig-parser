{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Twig Language Server",
      "path": "packages/twig-language-server",
      "type": "npm",
      "script": "esbuild-watch",
      "isBackground": true,
      "problemMatcher": "$esbuild-watch",
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "VSCode Twig",
      "path": "packages/vscode-twig",
      "type": "npm",
      "script": "esbuild-watch",
      "isBackground": true,
      "problemMatcher": "$esbuild-watch",
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Twig Language Server"
      ]
    }
  ]
}
